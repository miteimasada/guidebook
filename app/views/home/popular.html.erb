<div class = 'home-index-wrapper'>
  <div class = 'home-index-container'>
    <div class = 'menu'>
      <div class = 'menu-list'>
        <li><%= link_to( '新着','/') %></li>
        <li class='active'><%= link_to( '人気記事','/popular') %></li>
        <li><%= link_to( '人気タグ','#') %></li>
      </div>
    </div>

    <div class = 'home-index'>
      <p class = 'home-index-title'>人気記事</p>
      <% @all_ranks.each do |post|%>
        <%@likes_count = Like.where(post_id: post.id).count%>
        <div class = 'home-index-list'>
          <div class = 'home-index-list-left'>
            <div class = 'home-index-img'>
              <%= link_to(image_tag("/user_images/#{post.user.image_name}"), "/users/#{post.user.id}") %>
            </div>

            <div class = 'home-index-text'>
              <%= link_to( post.title,"/posts/#{post.id}") %>
              <p><%= post.content.truncate(80) %></p>
            </div>
          </div>

          <div class = 'created_at'>
            更新日<%= post.created_at.strftime('%Y/%m/%d') %>
            <div class = 'home-likes'>
              <span class="fa fa-heart like-btn-unlike"></span>
              <%= @likes_count %>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
