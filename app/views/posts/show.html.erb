<div class = 'posts-wrapper'>
  <div class = 'posts-container'>
    <div class = 'posts-content'>
      <div class = 'show-title'>
        <h1><%= @post.title %></h1>
        <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      <div class = 'show-text'>
        <p><%= @post.content %></p>
      </div>
    </div>
  </div>
</div>
