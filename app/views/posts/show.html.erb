<div class = 'wrapper'>
  <div class = 'container'>
    <div class = 'content'>
      <div class = 'show-title'>
        <h1><%= @post.title %></h1>
        <p>更新日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      <div class = 'show-text'>
        <p><%= @post.content %></p>
      </div>
      <div class = 'show-menu'>
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy",{method: "post"}) %>
      </div>
    </div>
  </div>
</div>
