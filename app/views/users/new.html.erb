<div class = 'wrapper'>
  <div class = 'container'>
    <div class = 'content'>

      <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      
        <div class = 'form'>
          <%= form_tag('users/create') do %>
            <h1>新規登録</h1>
            <div class = 'form-title'>
              <p>ユーザー名</p>
              <input name = 'name'>
            </div>
            <div class = 'form-content'>
              <p>メールアドレス</p>
              <input name = 'email'>
            </div>
              <input type="submit" value="新規登録">
          <%end%>
        </div>
    </div>
  </div>
</div>
