<div class = 'wrapper'>
  <div class = 'container'>
    <div class = 'content'>
    <% if @error_message %>
      <div class="form-error">
        <%= @error_message %>
      </div>
    <%end%>
    <%=form_tag('/login') do%>
        <div class = 'form'>
          <h1>ログイン</h1>
          <div class = 'form-title'>
            <p>メールアドレス</p>
            <input name = 'email' value= '<%=@email%>'>
          </div>
          <div class = 'form-content'>
            <p>パスワード</p>
            <input name = 'password' type = 'password' value = '<%=@password%>'>
          </div>
          <div class = 'btn'>
            <input type="submit" value="ログイン">
          </div>
        </div>
    <%end%>
    </div>
  </div>
</div>
